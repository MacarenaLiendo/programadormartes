<div class="container-fluid">
    <!--inicio home-->
    <div id="home" class="row align-items-center hero scroll_section">
        <div class="col-lg-3 offset-lg-2">
            <p>OUTLET</p>
            <h1>Mayorista y Minorista</h1>
            <p>Ofertas de hasta -50% de descuento en primeras marcas de panificados,
                galletitas, golosinas, snack </p>
        </div>
    </div>
    <!--fin home-->
    <!--inicio novedades-->
    <div class="row my-3">
        <div id="novedades" class="col-md-5 offset-md-2 py-3 scroll_section">
            <h2>Novedades</h2>
            <ul class="lista-novedades">
                {{#each novedades}}
                <li>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#Modal{{id}}">
                        <img src="images/panificado.jpg">{{titulo}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <!--inicio testimonio-->
        <div class="col-md-3 my-3">
            <div class="rounded py-5 testimonios">
                <h2 class="text-center">Testimonios</h2>
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="testimonio">
                                <h5>Los mejores precios de zona oeste</h5>
                                <p>Francisco, Isidro Casanova</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonio">
                                <h5>Encontras variedad de productos</h5>
                                <p>Maria, Tapiales</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonio">
                                <h5>Muy buena atencion</h5>
                                <p>Carlos, Gonzalez Catan</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <!--fin testimonio-->
        </div>
        <!--fin novedades-->
        <!--inicio modal-->
        {{#each novedades}}
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{titulo}}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h3>{{subtitulo}}</h3>
                        <p>{{cuerpo}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        <!--fin modal-->
        <!--inicio historia-->
        <div id="historia" class="row align-items-center py-4 scroll_section">
            <div class="col-lg-2 col-md-3 offset-lg-2 d-none d-sm-block">
                <img src="images/historia_1.jpg" alt="historia 1" class="img-fluid">
            </div>
            <div class="col-lg-2 col-md-3 d-none d-sm-block">
                <img src="images/historia_2.jpg" alt="historia 2" class="img-fluid">
            </div>
            <div class="col-12 d-sm-none">
                <img src="images/historia_3.jpg" alt="historia 3" class="img-fluid">
            </div>
            <div class="col-lg-4 col-md-6 mt-4 mt-sm-0">
                <h2>Historia</h2>
                <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Velit eos a consequuntur dignissimos,
                    saepe quasi quibusdam ratione ullam error, animi perspiciatis debitis modi beatae tempora
                    reiciendis
                    officia non impedit dolorem.</p>
            </div>
        </div>
        <!--fin historia-->
        <!--inicio nosotros-->
        <div id="nosotros" class="row align-items-stretch my-3 staff py-4 scroll_section">
            <div class="col-lg-8 offset-lg-2">
                <h2>Nosotros</h2>
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <div class="col">
                        <div class="card">
                            <img src="images/nosotros01.jpg" class="card-img-top" alt="Veronica Lopez">
                            <div class="card-body">
                                <h5 class="card-title">Veronica Lopez</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural
                                    lead-in to
                                    additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="images/nosotros02.jpg" class="card-img-top" alt="Jairo Izaurralde">
                            <div class="card-body">
                                <h5 class="card-title">Jairo Izaurralde</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural
                                    lead-in to
                                    additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="images/nosotros03.jpg" class="card-img-top" alt="Gustavo Villa">
                            <div class="card-body">
                                <h5 class="card-title">Gustavo Villa</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural
                                    lead-in to
                                    additional content.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="images/nosotros04.jpg" class="card-img-top" alt="Brenda Lopez">
                            <div class="card-body">
                                <h5 class="card-title">Brenda Lopez</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural
                                    lead-in to
                                    additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--fin nosotros-->
        <!--inicio visitanos-->
        <div id="conocenos" class="row py-4 scroll_section">
            <div class="col-md-4 offset-md-2">
                <h2>Visitanos</h2>
                <div class="mapa">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3279.6753299230163!2d-58.49744788504861!3d-34.71336807081446!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bccf0be3a590ef%3A0x53f281e80b285e5f!2sOutlet%20Panificados%20%26%20Golosinas!5e0!3m2!1ses-419!2sar!4v1663779499055!5m2!1ses-419!2sar"></iframe>

                </div>
            </div>
            <!-- fin visitanos -->
            <!-- inicio formulario -->
            <div class="col-md-4 mt-4 mt-sm-0">
                <h2>Contactanos</h2>
                <form class="row g-3" action="/" method="post">
                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre">
                    </div>
                    <div class="col-md-6">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido">
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                    </div>
                    <div class="col-12">
                        <label for="tel" class="form-label">Tel</label>
                        <input type="text" class="form-control" id="tel" placeholder="11-1111-1111" name="tel">
                    </div>
                    <div class="col-md-12">
                        <label for="mensaje" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
            <!-- fin formulario -->


        </div>